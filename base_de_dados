create database `webwhats`;
CREATE TABLE Cliente (
    ID int AUTO_INCREMENT PRIMARY KEY,
    nome varchar(255) NOT NULL,
    email varchar(255) NOT NULL,
    contacto INT NOT NULL,
    password varchar(255) NOT NULL,
    isactivated tinyint,
    isonline tinyint NOT NULL
      
);
CREATE TABLE Mensagens (
    ID int AUTO_INCREMENT PRIMARY KEY,
    body varchar(255),
    ler tinyint,
    type varchar(254),
    id_sender int,        
    id_receiver int,    
    date datetime
     
);
CREATE TABLE Contactos (
    ID int AUTO_INCREMENT PRIMARY KEY,      
    ID_Friend int,                       
    ID_Client int                           
);

ALTER TABLE Mensagens
ADD FOREIGN KEY (id_sender) REFERENCES Cliente(ID); 
ALTER TABLE Mensagens
ADD FOREIGN KEY (id_receiver) REFERENCES Cliente(ID); 

ALTER TABLE Contactos
ADD FOREIGN KEY (  ID_Friend) REFERENCES Cliente(ID); 
ALTER TABLE Contactos
ADD FOREIGN KEY ( ID_Client) REFERENCES Cliente(ID); 